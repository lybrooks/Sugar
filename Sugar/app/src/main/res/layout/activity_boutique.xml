<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="day.sugar.controller.activity.Boutique">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_orange">

        <ImageView
            android:id="@+id/back_nomal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:text="标题"
            android:textSize="15dp" />
    </LinearLayout>

    <include layout="@layout/fragment_newgoods" />
    <RadioButton
        android:id="@+id/new_goods"
        android:button="@null"
        android:drawableTop="@drawable/selector_menu_item_new_good"
        android:gravity="center_horizontal"
        android:checked="true"
        style="@style/menu_item_style"
        android:textColor="@color/main_botton_text_color"
        />

</LinearLayout>
