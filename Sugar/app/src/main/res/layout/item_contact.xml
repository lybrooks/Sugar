<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_contact"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="6dp"
    android:background="@color/bottom_bar_taobao_bg">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/nopic" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_goods_img"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_margin="5dp"-->
        <!--android:src="@mipmap/goods_thumb" />-->

    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_goods_img"
        android:singleLine="false"
        android:text="七匹狼男装"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_good_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_good_name"
        android:layout_alignStart="@+id/tv_good_name"
        android:layout_below="@id/tv_good_name"
        android:text="￥888"
        android:textColor="#d60b2d"
        android:textSize="10sp" />

</RelativeLayout>
